<div class="index_new">
  <div class="index">
    <h1>Books</h1>
    <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
              <%= link_to "Show", book_path(book.id) %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(book.id) %>
            </td>
            <td>
              <a href="/books/:id">Destroy</a>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <div class="new">
    <h2>New book</h2>
    <%= form_with model: @book, url: "/books", method: :post do |f| %>
      <div class="new_book_field">
        <label class="book_title">Title</label>
        <%= f.text_field :title %>
      </div>

      <div class="new_book_field">
        <label class="book_body">Body</label>
        <%= f.text_area :body %>
      </div>

      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>

