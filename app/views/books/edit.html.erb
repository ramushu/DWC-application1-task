<h1>Editing Book</h1>

<% flash.each do |message_type, message| %>
  <% if message_type == "notice" %>
    <p class="notice_message"><%= message %></p>
  <% else %>
    <div class="alert">
      <h2 class="alert_message"><%= message %></h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="edit_book_field">
    <%= f.label :title,"Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="edit_book_field">
    <%= f.label :body,"Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="edit_book_action">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
