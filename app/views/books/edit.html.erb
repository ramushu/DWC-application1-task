<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="edit_book_field">
    <label class="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="edit_book_field">
    <label class="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
